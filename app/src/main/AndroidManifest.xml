<?xml version="1.0" encoding="utf-8"?>
<manifest
  package="com.adityaworks.collegetools"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BunkCalculator"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DayGrid"
            android:label="@string/timetable"
            android:theme="@style/AppTheme.Timetable" >
        </activity>
        <activity
            android:name=".TimetableList"
            android:label="@string/title_activity_timetable_list" >
        </activity>
        <activity
          android:name=".CircularRevealActivity"
          android:excludeFromRecents="true"
          android:label="@string/title_activity_circular_reveal"
          android:noHistory="true"
          android:theme="@style/Transparent">
        </activity>
    </application>

</manifest>
